<html>
    <head>
        <title>Sistema de control de ingreso</title>
    </head>
    <body>
        <h1>Editar Area</h1>
        <hr>
        <form action="/m_areas_grabar_editar" method="POST">
            <input type="text" hidden name="xid" id="xid" value="<%= area._id %>">
            <table>
                <tr>
                    <td>Nombre:</td>
                    <td><input type="text" name="xnom" id="xnom" size="30" value="<%= area.nombre %>"></td>
                </tr>
                <tr>
                    <td>Abreviatura:</td>
                    <td><input type="text" name="xab" id="xab" size="30" value="<%= area.abreviatura %>"></td>
                </tr>
                <tr>
                    <td>Estado:</td>
                    <td><input type="text" name="xest" id="xest" size="10" value="<%= area.estado %>"></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Grabar"></td>
                </tr>
            </table>
        </form>
    </body>
</html>